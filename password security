#include <stdio.h>
#include <string.h>
#include <stdlib.h>

void setPassword();
void login();
void changePassword();

int main() {
    int choice;

    while (1) {
        printf("\n===== PASSWORD SECURITY SYSTEM =====\n");
        printf("1. Set Password\n");
        printf("2. Login\n");
        printf("3. Change Password\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                setPassword();
                break;
            case 2:
                login();
                break;
            case 3:
                changePassword();
                break;
            case 4:
                printf("Exiting...\n");
                exit(0);
            default:
                printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}

void setPassword() {
    FILE *fp;
    char pass[50];

    fp = fopen("password.txt", "w");
    if (fp == NULL) {
        printf("Error creating file!\n");
        return;
    }

    printf("Set your new password: ");
    scanf("%s", pass);
    fprintf(fp, "%s", pass);
    fclose(fp);
    printf("Password set successfully!\n");
}

void login() {
    FILE *fp;
    char stored[50], entered[50];

    fp = fopen("password.txt", "r");
    if (fp == NULL) {
        printf("No password found! Please set password first.\n");
        return;
    }

    fscanf(fp, "%s", stored);
    fclose(fp);

    printf("Enter your password: ");
    scanf("%s", entered);

    if (strcmp(stored, entered) == 0)
        printf("✅ Login Successful!\n");
    else
        printf("❌ Incorrect Password!\n");
}

void changePassword() {
    FILE *fp;
    char oldPass[50], newPass[50], stored[50];

    fp = fopen("password.txt", "r");
    if (fp == NULL) {
        printf("No password found! Please set password first.\n");
        return;
    }

    fscanf(fp, "%s", stored);
    fclose(fp);

    printf("Enter old password: ");
    scanf("%s", oldPass);

    if (strcmp(stored, oldPass) == 0) {
        printf("Enter new password: ");
        scanf("%s", newPass);

        fp = fopen("password.txt", "w");
        fprintf(fp, "%s", newPass);
        fclose(fp);

        printf("Password changed successfully!\n");
    } else {
        printf("Incorrect old password!\n");
    }
}
